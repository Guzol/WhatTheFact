{
  "manifest_version": 2,

  "name": "What The Fact?",
  "description": "Fact checking extension",
  "version": "1.0",
  "background": {
    "page": "background.html"
  },
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Inject sidebar"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["script.js"]
    }
  ],
  "permissions": [
    "tabs"
  ]
}